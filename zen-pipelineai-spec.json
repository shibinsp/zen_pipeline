  "api_specification": {
    "style": "RESTful with GraphQL option",
    "versioning": "URL path versioning (v1, v2)",
    "documentation": "OpenAPI 3.0 / Swagger",
    "rate_limiting": {
      "default": "1000 requests/minute",
      "configurable_per_tenant": true,
      "burst_handling": true
    },
    "endpoints": {
      "code_analysis": {
        "POST /api/v1/analysis/scan": "Trigger code scan",
        "GET /api/v1/analysis/scan/{id}": "Get scan results",
        "GET /api/v1/analysis/pr/{pr_id}": "Get PR analysis",
        "GET /api/v1/analysis/metrics/{repo}": "Get code metrics"
      },
      "test_intelligence": {
        "POST /api/v1/tests/select": "Get recommended tests for changes",
        "GET /api/v1/tests/history/{repo}": "Get test history",
        "GET /api/v1/tests/flaky/{repo}": "Get flaky test report",
        "POST /api/v1/tests/results": "Submit test results"
      },
      "deployments": {
        "POST /api/v1/deployments/risk-score": "Calculate deployment risk",
        "POST /api/v1/deployments": "Create deployment record",
        "GET /api/v1/deployments/{id}": "Get deployment details",
        "POST /api/v1/deployments/{id}/rollback": "Trigger rollback",
        "GET /api/v1/deployments/{id}/impact": "Get deployment impact analysis"
      },
      "architecture": {
        "GET /api/v1/architecture/dependencies/{repo}": "Get dependency graph",
        "POST /api/v1/architecture/validate": "Validate against rules",
        "GET /api/v1/architecture/drift/{repo}": "Get drift report"
      },
      "admin": {
        "GET /api/v1/admin/users": "List users",
        "POST /api/v1/admin/users": "Create user",
        "GET /api/v1/admin/audit-logs": "Get audit logs",
        "GET /api/v1/admin/usage": "Get usage metrics"
      }
    },
    "webhooks": {
      "outgoing": [
        "deployment.started",
        "deployment.completed",
        "deployment.failed",
        "scan.completed",
        "risk.threshold_exceeded",
        "architecture.violation_detected"
      ],
      "security": {
        "signing": "HMAC-SHA256",
        "retry_policy": "Exponential backoff (max 5 retries)"
      }
    }
  },

